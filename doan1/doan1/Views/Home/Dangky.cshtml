
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login V3</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/ContenLogin/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/ContenLogin/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/ContenLogin/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/ContenLogin/fonts/iconic/css/material-design-iconic-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/ContenLogin/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/ContenLogin/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/ContenLogin/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/ContenLogin/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/ContenLogin/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/ContenLogin/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/ContenLogin/css/main.css">
    <!--===============================================================================================-->
</head>
<body>

    <div class="limiter">
        <div class="container-login100" style="background-image: url('images/bg-01.jpg');">
            <div class="wrap-login100">
                @if (ViewData["err"] != null)
                {
                    <div id="err" class="alert alert-danger" role="alert">
                        <i class="uil uil-exclamation-octagon"></i> <!-- Icon from Unicons -->
                        @ViewData["err"]
                    </div>
                }

                @if (ViewData["succes"] != null)
                {
                    <div id="success" class="alert alert-success" role="alert">
                        <i class="uil uil-check-circle"></i> <!-- Icon from Unicons -->
                        @ViewData["succes"]
                    </div>
                }
            <form class="login100-form validate-form" id="registrationForm" method="post" action="~/Home/Dangky" onsubmit="return validateForm()">
                <span class="login100-form-logo">
                    <i class="zmdi zmdi-landscape"></i>
                </span>

                <span class="login100-form-title p-b-34 p-t-27">
                    Register
                </span>

                <div class="wrap-input100 validate-input" data-validate="Enter username">
                    <input class="input100" id="HoTen" type="text" name="HoTen" placeholder="Họ và tên">
                    <span class="focus-input100" data-placeholder="&#xf207;"></span>
                </div>

                <div class="wrap-input100 validate-input" data-validate="Enter tel">
                    <input class="input100" id="SoDienThoai" type="tel" name="SoDienThoai" placeholder="Số điện thoại">
                    <span class="focus-input100" data-placeholder="&#xf191;"></span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Enter email">
                    <input class="input100" id="Email" type="email" name="Email" placeholder="Email">
                    <span class="focus-input100" data-placeholder="&#xf191;"></span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Enter password">
                    <input class="input100" id="MatKhau" type="password" name="MatKhau" placeholder="Mật Khẩu">
                    <span class="focus-input100" data-placeholder="&#xf191;"></span>
                </div>
                <div class="wrap-input100 validate-input" data-validate="Enter password">
                    <input class="input100" id="NhapLaiMatKhau" type="password" name="NhapLaiMatKhau" placeholder="Nhập Lại Mật Khẩu">
                    <span class="focus-input100" data-placeholder="&#xf191;"></span>
                </div>



                <div class="container-login100-form-btn">
                    <button type="submit" class="login100-form-btn">
                        Save
                    </button>
                </div>

            
            </form>
            </div>
        </div>
    </div>


    <div id="dropDownSelect1"></div>
    <script>
        function validateForm() {
            // Lấy giá trị từ các ô input
            var hoTen = document.forms["registrationForm"]["HoTen"].value;
            var soDienThoai = document.forms["registrationForm"]["SoDienThoai"].value;
            var email = document.forms["registrationForm"]["Email"].value;
            var matKhau = document.forms["registrationForm"]["MatKhau"].value;
            var nhapLaiMatKhau = document.forms["registrationForm"]["NhapLaiMatKhau"].value;

            // Kiểm tra từng điều kiện
            if (hoTen.trim() === "") {
                alert("Họ và tên không được bỏ trống");
                return false;
            }

            if (!/^\d{10}$/.test(soDienThoai)) {
                alert("Số điện thoại phải có 10 chữ số");
                return false;
            }

            // Chú ý: Đối với biểu thức chính quy liên quan đến email, thêm dấu backslash trước ký tự
            if (!/\S+@@\S+\.\S+/.test(email)) {
                alert("Email không hợp lệ");
                return false;
            }

            if (matKhau.length < 8 || !/[A-Z]/.test(matKhau) || !/[!@@#$%^&*()_+]/.test(matKhau)) {
                alert("Mật khẩu không hợp lệ mật khẩu phải tối thiểu có 8 kí tự trong đó có 1 ký tự viết hoa 1 ký tự đặc biệt");
                return false;
            }

            if (matKhau !== nhapLaiMatKhau) {
                alert("Mật khẩu và Nhập lại mật khẩu không trùng khớp");
                return false;
            }

            // Nếu tất cả đều hợp lệ, cho phép submit
            return true;
        }
        $(document).ready(function () {

            setTimeout(function () {
                $("#err").fadeOut();
            }, 1000); // Thời gian hiển thị (ms)
        });
        $(document).ready(function () {

            setTimeout(function () {
                $("#success").fadeOut();
            }, 1000); // Thời gian hiển thị (ms)
        });
    </script>

    <!--===============================================================================================-->
    <script src="~/ContenLogin/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/ContenLogin/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/ContenLogin/vendor/bootstrap/js/popper.js"></script>
    <script src="~/ContenLogin/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/ContenLogin/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/ContenLogin/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/ContenLogin/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/ContenLogin/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/ContenLogin/js/main.js"></script>

</body>
</html>
